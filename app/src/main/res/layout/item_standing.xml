<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:paddingBottom="3dp"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/tv_item_standing_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textColor="#000000"
        android:ellipsize="end"
        android:maxLines="1"
        app:layout_constraintEnd_toStartOf="@+id/tv_item_standing_played"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="nama" />



    <TextView
        android:id="@+id/tv_item_standing_played"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:textColor="#1abc9c"
        app:layout_constraintEnd_toStartOf="@+id/tv_item_standing_goal"
        app:layout_constraintTop_toTopOf="@+id/tv_item_standing_goal"
        tools:text="00" />

    <TextView
        android:id="@+id/tv_item_standing_goal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:textColor="#f1c40f"
        app:layout_constraintEnd_toStartOf="@+id/tv_item_standing_win"
        app:layout_constraintTop_toTopOf="@+id/tv_item_standing_win"
        tools:text="00" />

    <TextView
        android:id="@+id/tv_item_standing_win"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:textColor="#3498db"
        app:layout_constraintEnd_toStartOf="@+id/tv_item_standing_draw"
        app:layout_constraintTop_toTopOf="@+id/tv_item_standing_draw"
        tools:text="00" />

    <TextView
        android:id="@+id/tv_item_standing_draw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="22dp"
        android:textColor="#9b59b6"
        app:layout_constraintEnd_toStartOf="@+id/tv_item_standing_loss"
        app:layout_constraintTop_toTopOf="@+id/tv_item_standing_loss"
        tools:text="00" />

    <TextView
        android:id="@+id/tv_item_standing_loss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:textColor="#34495e"
        app:layout_constraintEnd_toStartOf="@+id/tv_item_standing_total"
        app:layout_constraintTop_toTopOf="@+id/tv_item_standing_total"
        tools:text="00" />

    <TextView
        android:id="@+id/tv_item_standing_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textColor="#e74c3c"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="00" />
</androidx.constraintlayout.widget.ConstraintLayout>